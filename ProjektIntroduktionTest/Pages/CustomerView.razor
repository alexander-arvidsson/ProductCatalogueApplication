@page "/customers"
@using ProductCatalogueApplication.Data
@inject CustomerRepository customerRepo

<h1>Display </h1>
<div class="row bg-light">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Customer E-mail</th>
                <th>Customer Telephone</th>
            </tr>
        </thead>
        <tbody>
            @if (displayCustomers.Any())
            {
                @foreach (var b in displayCustomers)
                {
                    <tr>

                        <td>@b.Id</td>
                        <td>@b.Name </td>
                        <td>@b.Email</td>
                        <td>@b.Phone</td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>




@code{
    List<Customer> displayCustomers;

    protected override async Task OnInitializedAsync()
    {
        displayCustomers = await customerRepo.GetCustomersAsync();
    }
}
