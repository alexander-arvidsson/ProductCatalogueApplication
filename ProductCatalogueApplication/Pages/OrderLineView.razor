@page "/orderlines"
@using ProductCatalogueApplication.Data

@inject OrderLineRepository orderLineRepo

<h1>Display </h1>
<div class="row bg-light">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>OrderLine ID</th>
                <th>Quantity</th>
                <th>Product ID</th>
                <th>Order ID</th>
            </tr>
        </thead>
        <tbody>
            @if (displayOrderLines.Any())
            {
                @foreach (var b in displayOrderLines)
                {
                    <tr>

                        <td>@b.Id</td>
                        <td>@b.Quantity</td>
                        <td>@b.ProductId</td>
                        <td>@b.OrderId</td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code{
    List<OrderLine> displayOrderLines;

    protected override async Task OnInitializedAsync()
    {
        displayOrderLines = await orderLineRepo.GetOrderLinesAsync();
    }
}
