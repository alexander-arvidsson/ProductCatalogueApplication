@page "/customers"
@using ProductCatalogueApplication.Data
@using ProductCatalogueApplication.Data.Interfaces
@inject ICustomerRepository customerRepo

<h1>Display </h1>
<div class="row bg-light">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Customer E-mail</th>
                <th>Customer Telephone</th>
            </tr>
        </thead>
        <tbody>
            @if (displayCustomers.Any())
            { 
                @foreach (var b in displayCustomers)
                {
            <tr>

                <td>@b.Id</td>
                <td>@b.Name </td>
                <td>@b.Email</td>
                <td>@b.Phone</td>
                <td><button class="btn btn-danger" @onclick="(() => SetForUpdate(b))">Update</button></td>

            </tr>
                }
            }
        </tbody>
    </table>
</div>

<EditForm Model="@customer" OnValidSubmit="(() => AddCustomer(customer))">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="name">Customer name</label>
        <input @bind-value="@customer.Name" type="text" />
    </div>
    <div class="form-group">
        <label for="description">Phone Number</label>
        <input @bind-value="@customer.Phone" type="text" />
    </div>
    <div class="form-group">
        <label for="price">Email</label>
        <input @bind-value="@customer.Email" type="email" step="0.01" />
    </div>
    <button class="btn btn-info" type="submit">Add Customer</button>
</EditForm>

<EditForm Model="@customer" OnValidSubmit="(() => UpdateCustomer(customer))">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="name">Customer name</label>
        <input @bind-value="@customer.Name" type="text" />
    </div>
    <div class="form-group">
        <label for="description">Phone Number</label>
        <input @bind-value="@customer.Phone" type="text" />
    </div>
    <div class="form-group">
        <label for="price">Email</label>
        <input @bind-value="@customer.Email" type="email" step="0.01" />
    </div>
    <button class="btn btn-info" type="submit">Add Customer</button>
</EditForm>

@code{

    private List<Customer> displayCustomers;
    private List<Customer> updatedCustomer;
    private Customer customer = new Customer();

    private async void AddCustomer(Customer c)
    {
        customerRepo.AddCustomer(c);
        customer = new Customer();
        updatedCustomer = await customerRepo.GetCustomersAsync(c.Id);

        displayCustomers.Add(updatedCustomer.First());
    }

    private void SetForUpdate(Customer updated)
    {
        customer = updated;
    }

    private void UpdateCustomer(Customer c)
    {
        customerRepo.UpdateCustomer(c);
    }

    protected override async Task OnInitializedAsync()
    {
        displayCustomers = await customerRepo.GetCustomersAsync();
    }
}
